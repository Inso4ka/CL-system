{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "clang++ build client",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-g",
                "client/main.cpp",
                "-o",
                "out/client"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "clang++ build server",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-g",
                "server/main.cpp",
                "-o",
                "out/server"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}