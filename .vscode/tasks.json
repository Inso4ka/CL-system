{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "clang++ build client",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-g",
                "-I/opt/homebrew/Cellar/boost/1.81.0_1/include/",
                "-I/opt/homebrew/Cellar/sqlite/3.42.0/include/",
                "-o",
                "out/client",
                "client/main.cpp",
                "client/client.cpp",
                "-L/opt/homebrew/Cellar/boost/1.81.0_1/lib",
                "-L/opt/homebrew/Cellar/sqlite/3.42.0/lib/",
                "-lsqlite3"
            ],
            "options": {
                "env": {
                    "DYLD_LIBRARY_PATH": "/opt/homebrew/Cellar/sqlite/3.41.2/lib/",
                    "LIBRARY_PATH": "/opt/homebrew/Cellar/boost/1.81.0_1/lib"
                },
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "clang++ build server",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-g",
                "-I/opt/homebrew/Cellar/boost/1.81.0_1/include/",
                "-I/opt/homebrew/Cellar/sqlite/3.42.0/include/",
                "-o",
                "out/server",
                "server/main.cpp",
                "server/lightDatabase.cpp",
                "server/securityDatabase.cpp",
                "server/temperatureDatabase.cpp",
                "-L/opt/homebrew/Cellar/boost/1.81.0_1/lib",
                "-L/opt/homebrew/Cellar/sqlite/3.42.0/lib/",
                "-lsqlite3"
            ],
            "options": {
                "env": {
                    "DYLD_LIBRARY_PATH": "/opt/homebrew/Cellar/sqlite/3.42.0/lib/",
                    "LIBRARY_PATH": "/opt/homebrew/Cellar/boost/1.81.0_1/lib"
                },
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}